<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-xs-12 element-center">
        <h2><b>Jornada Electoral Distrito @ViewBag.District </b> | 2015 </h2>
    </div>
</div>
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="space-10"></div>
    <div class="col-xs-12">
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Journal", new { area = "" })">Jornada Electoral</a>
            </li>
            <li class="active">
                <strong>Regiones</strong>
            </li>
        </ol>
    </div>
</div>
<div class="ibox" ng-controller="regionController" ng-init="idDistrict=@ViewBag.District;" ng-cloak>
    <div class="ibox-title">
        <h5>
            Reporte inicial para la apertura de casillas del Distrito @ViewBag.District
        </h5>
        <div class="ibox-tools">
            <span class="label label-success"><h4>Regiones</h4></span>
        </div>
    </div>
    <div class="ibox-content">
        <div class="project-list">
            <table class="table table-hover">
                <tbody>
                    <tr ng-repeat="r in lstResults | orderBy:'IdRegion'">
                        <td>
                            <a class="label label-warning font-sz-m"
                               href="@Url.Action("Detail", "Journal")?district=@ViewBag.District&region={{r.IdRegion}}">
                                {{firstCatalog(catalogs.Regions, r.IdRegion, 'ValOne')}}
                            </a>
                            <div class="space-10"></div>
                            <div ng-repeat="c in r.Coordinates | orderBy:'ValOne' track by $index">
                                <span class="btn btn-social btn-circle btn-xs" type="button">
                                    <i class="fa fa-user"></i>
                                </span>&nbsp;&nbsp;<small>{{c.ValOne}}</small><br />
                            </div>
                            <div ng-repeat="c in r.Locations | orderBy:'ValOne' track by $index">
                                <span class="btn btn-social btn-circle btn-xs" type="button">
                                    <i class="fa fa-map-marker"></i>
                                </span>&nbsp;&nbsp;<small>{{c.ValOne}}</small><br />
                            </div>
                        </td>

                        <td class="project-title">
                            <button class="btn btn-info btn-circle btn-xs" type="button">
                                <i class="fa fa-users"></i>
                            </button>&nbsp;&nbsp;
                            <a href="">Asistencia</a>
                            <div class="space-10"></div>
                            <button class="btn btn-success btn-s-xs" type="button">{{r.AsistenciaConteo}} &nbsp;<i class="fa fa-thumbs-up"></i>&nbsp;</button><small>&nbsp;&nbsp;Con asistencia</small>&nbsp;&nbsp;&nbsp;&nbsp;
                            <button class="btn btn-danger btn-s-xs" type="button">{{r.AsistenciaCasillas - r.AsistenciaConteo}} &nbsp;<i class="fa fa-thumbs-down"></i>&nbsp;</button><small>&nbsp;&nbsp;Sin asistencia</small>
                            <br />
                            <div class="progress progress-mini">
                                <div style="width: {{(r.AsistenciaCasillas/r.TotalCasillas*100)|number:0}}%;" class="progress-bar progress-bar-success"></div>
                            </div>
                            <small class="element-center">Casillas completadas: {{(r.AsistenciaCasillas/r.TotalCasillas*100)|number:0}} % &nbsp;&nbsp; ({{r.AsistenciaCasillas}} / {{r.TotalCasillas}})</small>
                        </td>
                        <td class="project-title">
                            <button class="btn btn-success btn-circle btn-xs" type="button">
                                <i class="fa fa-power-off"></i>
                            </button>&nbsp;&nbsp;
                            <a href="">Instalación</a>
                            <div class="space-10"></div>
                            <button class="btn btn-success btn-s-xs" type="button">{{r.InstalacionConteo}} &nbsp;<i class="fa fa-thumbs-up"></i>&nbsp;</button><small>&nbsp;&nbsp;Instaladas</small>&nbsp;&nbsp;&nbsp;&nbsp;
                            <button class="btn btn-danger btn-s-xs" type="button">{{r.InstalacionCasillas - r.InstalacionConteo}} &nbsp;<i class="fa fa-thumbs-down"></i>&nbsp;</button><small>&nbsp;&nbsp;No instaladas</small>
                            <br />
                            <div class="progress progress-mini">
                                <div style="width: {{(r.InstalacionCasillas/r.TotalCasillas*100)|number:0}}%;" class="progress-bar progress-bar-success"></div>
                            </div>
                            <small class="element-center">Casillas completadas: {{(r.InstalacionCasillas/r.TotalCasillas*100)|number:0}} % &nbsp;&nbsp; ({{r.InstalacionCasillas}} / {{r.TotalCasillas}})</small>
                        </td>
                        <td class="project-title">
                            <button class="btn btn-danger btn-circle btn-xs" type="button">
                                <i class="fa fa-bolt"></i>
                            </button>&nbsp;&nbsp;<a href="">Incidentes</a>
                            <div class="space-10"></div>
                            <button class="btn btn-success btn-s-xs" type="button">{{r.IncidentesCasillas - r.IncidentesConteo}} &nbsp;<i class="fa fa-thumbs-down"></i>&nbsp;</button><small>&nbsp;&nbsp;Sin incidentes</small>&nbsp;&nbsp;&nbsp;&nbsp;
                            <button class="btn btn-danger btn-s-xs" type="button">{{r.IncidentesConteo}} &nbsp;<i class="fa fa-thumbs-up"></i>&nbsp;</button><small>&nbsp;&nbsp;Con incidentes</small>
                            <br />
                            <div class="progress progress-mini">
                                <div style="width: {{(r.IncidentesCasillas/r.TotalCasillas*100)|number:0}}%;" class="p progress-bar progress-bar-success"></div>
                            </div>
                            <small class="element-center">Casillas completadas: {{(r.IncidentesCasillas/r.TotalCasillas*100)|number:0}} % &nbsp;&nbsp; ({{r.IncidentesCasillas}} / {{r.TotalCasillas}})</small>
                        </td>
                        <td class="project-title">
                            <button class="btn btn-warning btn-circle btn-xs" type="button">
                                <i class="fa fa-paw"></i>
                            </button>&nbsp;&nbsp;<a href="">Desayunos</a>
                            <div class="space-10"></div>
                            <button class="btn btn-success btn-s-xs" type="button">{{r.DesayunoConteo}} &nbsp;<i class="fa fa-thumbs-up"></i>&nbsp;</button><small>&nbsp;&nbsp;Con desayuno</small>&nbsp;&nbsp;&nbsp;&nbsp;
                            <button class="btn btn-danger btn-s-xs" type="button">{{r.DesayunoCasillas - r.DesayunoConteo}} &nbsp;<i class="fa fa-thumbs-down"></i>&nbsp;</button><small>&nbsp;&nbsp;Sin desayuno</small>
                            <br />
                            <div class="progress progress-mini">
                                <div style="width: {{(r.DesayunoCasillas/r.TotalCasillas*100)|number:0}}%;" c class="progress-bar progress-bar-success"></div>
                            </div>
                            <small class="element-center">Casillas: {{(r.DesayunoCasillas/r.TotalCasillas*100)|number:0}} % &nbsp;&nbsp; ({{r.DesayunoCasillas}} / {{r.TotalCasillas}})</small>
                        </td>
                        <td class="project-title">
                            <button class="btn btn-warning btn-circle btn-xs" type="button">
                                <i class="fa fa-gift"></i>
                            </button>&nbsp;&nbsp;<a href="">Comidas</a>
                            <div class="space-10"></div>
                            <button class="btn btn-success btn-s-xs" type="button">{{r.DesayunoConteo}} &nbsp;<i class="fa fa-thumbs-up"></i>&nbsp;</button><small>&nbsp;&nbsp;Con comida</small>&nbsp;&nbsp;&nbsp;&nbsp;
                            <button class="btn btn-danger btn-s-xs" type="button">{{r.DesayunoCasillas - r.DesayunoConteo}} &nbsp;<i class="fa fa-thumbs-down"></i>&nbsp;</button><small>&nbsp;&nbsp;Sin comida</small>
                            <br />
                            <div class="progress progress-mini">
                                <div style="width: {{(r.DesayunoCasillas/r.TotalCasillas*100)|number:0}}%;" c class="progress-bar progress-bar-success"></div>
                            </div>
                            <small class="element-center">Casillas: {{(r.DesayunoCasillas/r.TotalCasillas*100)|number:0}} % &nbsp;&nbsp; ({{r.DesayunoCasillas}} / {{r.TotalCasillas}})</small>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

@section scripts
{
    <script src="~/Scripts/app/ctrl/regionCtrl.js"></script>
}
